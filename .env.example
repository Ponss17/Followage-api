# Puerto del servidor (local)
PORT=3000

# Credenciales de la app de Twitch (Dashboard de desarrollador)
TWITCH_CLIENT_ID=tu_client_id
TWITCH_CLIENT_SECRET=tu_client_secret

JWT_SECRET=cambia_esto_en_produccion

OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# Canal por defecto (opcional): usado como fallback si no se provee channel
TWITCH_CHANNEL_LOGIN=tu_canal

# CORS: or√≠genes permitidos separados por comas (opcional, por defecto permite todos)
# Ejemplo: CORS_ORIGIN=https://tudominio.com,https://otrodominio.com
# Para permitir todos: CORS_ORIGIN=*
CORS_ORIGIN=*