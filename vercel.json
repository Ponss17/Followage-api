{
  "rewrites": [
    { "source": "/auth/(.*)", "destination": "/api/app/auth/$1" },
    { "source": "/api/(.*)", "destination": "/api/app/api/$1" },
    { "source": "/twitch/(.*)", "destination": "/api/app/twitch/$1" },
    { "source": "/channel/(.*)", "destination": "/api/app/channel/$1" },
    { "source": "/me", "destination": "/api/app/me" },
    { "source": "/channel/me", "destination": "/api/app/channel/me" },
    { "source": "/health", "destination": "/api/app/health" },

    { "source": "/", "destination": "/public/index.html" },
    { "source": "/(.*)", "destination": "/public/$1" }
  ]
}